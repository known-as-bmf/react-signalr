    "@testing-library/react": "11.2.5",
    "@testing-library/react-hooks": "5.1.0",
    "@types/jest": "26.0.20",
    "@types/react": "17.0.2",
    "@types/react-dom": "17.0.1",
    "eslint": "7.21.0",
    "husky": "4.3.8",
    "prettier": "2.2.1",
    "pretty-quick": "3.1.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-test-renderer": "17.0.1",
    "rxjs": "6.6.6",
    "tslib": "2.1.0",
    "typescript": "4.2.2"
  },
  "dependencies": {
    "@known-as-bmf/store": "3.0.7",
    "@microsoft/signalr": "5.0.3"
  },
